FROM ubuntu
RUN apt update && apt install -yq --no-install-recommends \ 
    nano \
    git curl \
    net-tools iputils-ping \
    sudo \
    openssh-server

RUN mkdir -p /root/admin/base
WORKDIR /root/admin/base  
#Directorio fijado, con el que hago referencia a la hora de hacer las cosas, por eso uso el . (parecido al contexto)
COPY ./dockerfiles/base/admin .
COPY ./common/ /root/admin/common

##Mal porque es una variable de entorno, y lo que hay que pasar son argumentos de construcción (args).
#COPY cp . /home/${USUARIO}/cpyadmin.sh

#Usado cuando hago un docker compose, por lo que hace referencia al contexto.
#COPY ./admin/start.sh . (Usado para Docker Build, ya que aquí es la ruta relativa al directorio donde me encuentro, no al contexto.)
RUN chmod +x ./start.sh

ENTRYPOINT [ "./start.sh"]
